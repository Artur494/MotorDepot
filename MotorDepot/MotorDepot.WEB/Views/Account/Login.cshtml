@model MotorDepot.WEB.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Sign in into Motor Depot service.</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h6>E-mail <i class="text-danger">*</i></h6>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <h6>Password <i class="text-danger">*</i></h6>
        <div>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control w-75 d-inline" } })
            <span class="fa fa-eye-slash btn mb-2"></span>
        </div>
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Sign in" class="btn btn-primary border border-dark" />
        </div>
    </div>
}

@section scripts
{
    <script>
        $('.fa-eye-slash').click(function () {
            var passwordInputType = $('#Password').get(0).type;
            if (passwordInputType === 'text') {
                $('#Password').get(0).type = 'password';
            } else {
                $('#Password').get(0).type = 'text';
            }
        });
    </script>
}